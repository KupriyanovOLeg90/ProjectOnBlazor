

@if (!IsTable)
{
    <div class="row text-center alert alert-info">
        <div class="col">
            <p>@Game.Name</p>
            <p>@Game.Genre</p>
            <p>@Game.ReleaseDate.ToString("dd.MM.yyyy")</p>
        </div>
    </div>

    @if (IsVisibleButtons)
    {
        <div class="row  offset-3">
            <div class="col">
                <button class="btn btn-danger" @onclick="() => { SwichGame.InvokeAsync(Game); }">Delete</button>
            </div>
            <div class="col alert alert-success">
            </div>
        </div>
    }
}
else
{
    <tr>
        <td>@Game.Name</td>
        <td>@Game.Genre</td>
        <td>@Game.ReleaseDate.ToString("dd.MM.yyyy")</td>
        <td>
            @if (IsVisibleButtons)
            {
                <button class="btn btn-danger" @onclick="()=> { DeleteGame.InvokeAsync(Game);  }">Delete</button>
            }
        </td>

    </tr>
}


@code {
    [Parameter]
    public Game Game { get; set; }
    [Parameter]
    public bool IsTable { get; set; }
    [Parameter]
    public bool IsVisibleButtons { get; set; } = false;
    [Parameter]
    public EventCallback<Game> DeleteGame{ get; set; }
    [Parameter]
    public EventCallback<Game> SwichGame { get; set; }
}
